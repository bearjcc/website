{
  "// INSTRUCTIONS": "Copy these settings to your .vscode/settings.json or Cursor settings",
  
  "// Tailwind CSS IntelliSense": {
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.includeLanguages": {
      "blade": "html"
    },
    "tailwindCSS.experimental.classRegex": [
      ["class(?:Name)?\\s*=\\s*['\"`]([^'\"`]*)['\"`]", "([^\\s'\"`]*)"]
    ]
  },

  "// PHP IntelliSense": {
    "php.suggest.basic": false,
    "intelephense.stubs": [
      "apache",
      "bcmath",
      "bz2",
      "calendar",
      "com_dotnet",
      "Core",
      "ctype",
      "curl",
      "date",
      "dba",
      "dom",
      "enchant",
      "exif",
      "FFI",
      "fileinfo",
      "filter",
      "fpm",
      "ftp",
      "gd",
      "gettext",
      "gmp",
      "hash",
      "iconv",
      "imap",
      "intl",
      "json",
      "ldap",
      "libxml",
      "mbstring",
      "meta",
      "mysqli",
      "oci8",
      "odbc",
      "openssl",
      "pcntl",
      "pcre",
      "PDO",
      "pdo_ibm",
      "pdo_mysql",
      "pdo_pgsql",
      "pdo_sqlite",
      "pgsql",
      "Phar",
      "posix",
      "pspell",
      "readline",
      "Reflection",
      "session",
      "shmop",
      "SimpleXML",
      "snmp",
      "soap",
      "sockets",
      "sodium",
      "SPL",
      "sqlite3",
      "standard",
      "superglobals",
      "sysvmsg",
      "sysvsem",
      "sysvshm",
      "tidy",
      "tokenizer",
      "xml",
      "xmlreader",
      "xmlrpc",
      "xmlwriter",
      "xsl",
      "Zend OPcache",
      "zip",
      "zlib"
    ],
    "intelephense.files.associations": [
      "*.php",
      "*.phtml"
    ],
    "intelephense.environment.phpVersion": "8.4.0"
  },

  "// Laravel Specific": {
    "files.associations": {
      "*.blade.php": "blade"
    },
    "emmet.includeLanguages": {
      "blade": "html"
    }
  },

  "// Format on Save": {
    "[php]": {
      "editor.defaultFormatter": "junstyle.php-cs-fixer",
      "editor.formatOnSave": false
    },
    "[blade]": {
      "editor.defaultFormatter": "shufo.vscode-blade-formatter",
      "editor.formatOnSave": false
    }
  },

  "// File Exclusions for Better Performance": {
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/node_modules": true,
      "**/vendor": true,
      "**/_ide_helper*.php": true,
      "**/.phpstorm.meta.php": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/vendor": true,
      "**/public/build": true,
      "**/storage": true,
      "_ide_helper*.php": true,
      ".phpstorm.meta.php": true
    }
  },

  "// Cursor AI Specific": {
    "cursor.cpp.disabledLanguages": [],
    "cursor.general.enableMcp": true
  }
}

